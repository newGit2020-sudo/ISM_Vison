<UserControl
    x:Class="Sequence.Views.ParameterTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sequence.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <!--<GridSplitter  Width ="5" ></ GridSplitter >-->
            <ListBox x:Name="listbox">
                <ListBoxItem>
                    <ListBoxItem.Template>
                        <ControlTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Border BorderBrush="Orange" BorderThickness="1" CornerRadius="6" Background="Yellow">
                                    <TextBlock
                                Grid.Column="0"
                                Background="AliceBlue"
                                Text="Name" />
                                </Border>
                                <TextBox Grid.Column="1" Text="{Binding Path=SequenceFun.sequence.Name}" />
                            </Grid>
                        </ControlTemplate>
                    </ListBoxItem.Template>
                </ListBoxItem>
                <ListBoxItem>
                    <ListBoxItem.Template>
                        <ControlTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Text="Camera" />
                                <ComboBox Name="CameraCB" Grid.Column="1" DisplayMemberPath="Name"   SelectedIndex ="{Binding Path=Index}" ItemsSource="{Binding Path=CameraConfig}" >
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectionChanged">
                                        <prism:InvokeCommandAction Command="{Binding IsSelectedCommand}" CommandParameter="{Binding SelectedItem, ElementName=CameraCB}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </ComboBox>
                                <!--<ComboBox Name="CameraCB" Grid.Column="1" DisplayMemberPath="Name" ItemsSource="{Binding Path=CameraConfig}" 
                           SelectedItem="{Binding ElementName=CameraCB, Path=SelectedItem.Camera, Mode=TwoWay}" SelectedValuePath="CameraId" 
                           SelectedValue="{Binding ElementName=CameraCB, Path=SelectedItem.Camera}" />-->
                            </Grid>
                        </ControlTemplate>
                    </ListBoxItem.Template>
                </ListBoxItem>
                <ListBoxItem>
                    <ListBoxItem.Template>
                        <ControlTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Text="ExposureTime" />
                                <TextBox Grid.Column="1" Text="{Binding Path=SequenceFun.sequence.ExposureTime}" />
                            </Grid>
                        </ControlTemplate>
                    </ListBoxItem.Template>
                </ListBoxItem>
            </ListBox>
            <!--<DataGrid Name="DG1" ItemsSource="{Binding}" AutoGenerateColumns="False" >
